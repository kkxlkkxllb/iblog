xml.instruct!
xml.urlset "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
  xml.url do
    xml.loc     root_path(:only_path => false)
    xml.changefreq   "monthly"
    xml.priority   1.0 
  end
  
  xml.url do
    xml.loc     blog_path(:only_path => false)
    xml.changefreq   "daily"
    xml.priority   0.9
  end
  
  xml.url do
    xml.loc     me_path(:only_path => false)
    xml.changefreq   "monthly"
    xml.priority   0.8
  end
  
  @articles.each do |post|
    xml.url do
      xml.loc     article_path(post,:only_path => false)
      xml.lastmod post.updated_at.to_date
      xml.changefreq   "monthly"
      xml.priority   0.8
    end
  end
  
  
end